.PHONY: all clean
all: everything
clean: clean_everything


.PHONY: clean_everything
clean_everything: $(CLEAN_TARGETS)

.PHONY: everything
everything: $(ALL_TARGETS)


.PHONY:$(ALL_TARGETS)
$(ALL_TARGETS):
	make -f Makefile $(opts)

.PHONY: $(CLEAN_TARGETS)
$(CLEAN_TARGETS):
	make -f Makefile clean $(opts)

.PHONY: help
help:
	@echo "This is your new top makefile. synopsis: make <target>" .
	@echo "Valid targets":
	@echo "all"
	@echo "clean"
	@echo "$(ALL_TARGETS)"
	@echo "$(CLEAN_TARGETS)"

